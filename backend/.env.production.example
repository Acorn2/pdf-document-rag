# 基础配置
APP_NAME=PDF文献分析智能体
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=production

# 数据库配置 - PostgreSQL生产环境
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/document_analysis
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=document_analysis
DB_USER=postgres
DB_PASSWORD=postgres

# 连接池配置
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# Redis配置
REDIS_URL=redis://localhost:6379/0
USE_REDIS=true

# 通义千问配置
DASHSCOPE_API_KEY=your-production-openai-api-key
QWEN_MODEL=qwen-plus
QWEN_EMBEDDING_MODEL=text-embedding-v1

# OpenAI配置（备用）
OPENAI_API_KEY=your-production-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# 模型选择
LLM_TYPE=qwen
EMBEDDING_TYPE=qwen

# 服务端口
API_PORT=8000
API_HOST=0.0.0.0

# 文件上传配置
MAX_FILE_SIZE=100MB
UPLOAD_DIRECTORY=./uploads
VECTOR_DB_DIRECTORY=./vector_db

# 缓存配置
CACHE_TTL=7200
SEARCH_CACHE_TTL=3600

# 安全配置
SECRET_KEY=your-super-secret-key-here
CORS_ORIGINS=["https://yourdomain.com"]

# 文档处理配置
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_RETRIES=5
RETRY_INTERVAL=600

# 日志配置
LOG_FILE_MAX_SIZE=50MB
LOG_BACKUP_COUNT=10

# Qdrant向量数据库配置
QDRANT_HOST=ip
QDRANT_PORT=6333
QDRANT_USE_HTTPS=false
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=document_analysis
QDRANT_VECTOR_SIZE=1536