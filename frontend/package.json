{
  "name": "pdf-document-agent-frontend",
  "version": "1.0.0",
  "description": "PDF文献分析智能体前端界面",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "build:prod": "vue-tsc && vite build --mode production",
    "preview": "vite preview --host 0.0.0.0 --port 3000",
    "preview:prod": "vite preview --mode production --port 3000 --host 0.0.0.0",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "clean": "rm -rf dist",
    "deploy": "npm run build && pm2 restart pdf-frontend || pm2 start ecosystem.config.js",
    "serve": "npm run preview:prod",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop pdf-frontend",
    "pm2:restart": "pm2 restart pdf-frontend",
    "pm2:delete": "pm2 delete pdf-frontend",
    "pm2:logs": "pm2 logs pdf-frontend"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.1.0",
    "axios": "^1.6.0",
    "element-plus": "^2.4.2",
    "highlight.js": "^11.9.0",
    "marked": "^11.0.0",
    "pinia": "^2.1.7",
    "vue": "^3.3.8",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@types/marked": "^6.0.0",
    "@types/node": "^20.9.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.53.0",
    "eslint-plugin-vue": "^9.18.1",
    "sass": "^1.89.2",
    "typescript": "~5.2.0",
    "vite": "^4.5.0",
    "vue-tsc": "^1.8.22"
  }
}
